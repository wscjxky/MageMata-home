<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <TextView
        style="@style/label"
        android:text="发布凑单信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/publish_iv_join"
        android:layout_alignRight="@+id/publish_iv_lost"
        android:layout_alignEnd="@+id/publish_iv_lost"
        android:id="@+id/textView3" />

    <TextView
        style="@style/label"
        android:text="发布失物招领"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView"
        android:layout_below="@+id/publish_iv_lost"
        android:layout_alignLeft="@+id/publish_iv_lost"
        android:layout_alignStart="@+id/publish_iv_lost"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView style="@style/label"
        android:text="发布二手商品"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/publish_iv_used"
        android:layout_alignStart="@+id/publish_iv_used" />

    <TextView
        style="@style/label"
        android:text="发布打印信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/publish_iv_used"
        android:layout_alignEnd="@+id/publish_iv_used" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/icon_findwork"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:clickable="true"
        android:adjustViewBounds="false"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="23dp"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/icon_joingood"
        android:id="@+id/publish_iv_join"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:clickable="true"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="25dp" />

    <TextView
        style="@style/label"
        android:text="发布招聘信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/textView10" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/icon_print"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:clickable="true"
        android:id="@+id/publish_iv_print"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/publish_iv_join"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ico_shop"
        android:id="@+id/publish_iv_used"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:clickable="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_alignTop="@+id/publish_iv_lost"
        android:layout_toRightOf="@+id/publish_iv_join"
        android:layout_toEndOf="@+id/publish_iv_join" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/icon_findlost"
        android:id="@+id/publish_iv_lost"
        android:layout_marginTop="15dp"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>